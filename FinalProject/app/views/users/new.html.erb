<%= form_with(model: @user) do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>
     <br>
     <br>
    <%= form.label :email %>
    <%= form.email_field :email %>
     <br>
     <br>
    <%= form.label :role %>
    <%= form.text_field :role %>
      <br>
      <br>
    <%= form.submit "Create my account" %>
  <% end %>